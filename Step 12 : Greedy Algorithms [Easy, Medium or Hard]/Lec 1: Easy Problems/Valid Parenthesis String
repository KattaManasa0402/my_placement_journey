class Solution {
public:
    bool checkValidString(string s) {
        stack<char>st1;
        stack<char>st2;

        int n=s.size();

        for(int i=0;i<n;i++){
            char c=s[i];

            if(c=='('){
                st1.push(i);
            }
            if(c=='*'){
                st2.push(i);
            }
            if(c==')'){
                if(!st1.empty()){
                    st1.pop();
                }
                else if(!st2.empty()){
                    st2.pop();
                }
                else if(st1.empty() && st2.empty()){
                    return false;
                }
            }
        }

        while((!st1.empty()) && (!st2.empty())){
            if(st1.top()>st2.top()){
                return false;
            }
            st1.pop();
            st2.pop();
        }
        return (st1.empty());
        //handle the remaining elements 
        

    }
};
